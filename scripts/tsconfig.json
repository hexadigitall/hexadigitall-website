{
  "compilerOptions": {
    "target": "ES2019",
    "module": "es2020",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "noEmit": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.test.ts",
    "./**/*.test.tsx"
  ]
}